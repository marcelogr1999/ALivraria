<UserControl x:Class="ProjetoCSharp.UserControlListar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetoCSharp"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
    <Grid Background="#FFFFA200" Width="376" HorizontalAlignment="Center" VerticalAlignment="Center" Height="335">
        
        <ListView x:Name="listLivros" Foreground="White" BorderBrush="{x:Null}" Margin="0,1,0,9">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nome" DisplayMemberBinding="{Binding nomeLivro}" />
                    <GridViewColumn Header="Cod" DisplayMemberBinding="{Binding cod}" />
                    <GridViewColumn Header="Gênero" DisplayMemberBinding="{Binding livroIdGenero}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
